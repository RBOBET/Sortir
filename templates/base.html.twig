<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@1,500&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        <link rel="icon" href="{{ asset('img/img.png') }}">
        <title>{% block title %}Sortir.com{% endblock %}</title>
    </head>
    <body>



        <div class="container">
            <header>
                <h1>
                    <a href="{{ path('main_home') }}">
                        <img src="{{ asset('img/img.png') }}" alt="Sortir.com | Accueil">
                    </a>
                </h1>
                {% include 'menu/nav.html.twig' %}
            </header>


            <main>

                {% block pageTitle %}{% endblock %}
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="flash flash-{{ label }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
                {% block body %}{% endblock %}
            </main>

            <footer>
                <h4>&copy; Par ici la Sortie {{ date() | date('Y') }}</h4>
            </footer>
        </div>
    </body>
</html>
